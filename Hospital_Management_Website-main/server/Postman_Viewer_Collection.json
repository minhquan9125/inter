              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "by-specialization"],
              "query": [
                {
                  "key": "token",
                  "value": "{{viewerToken}}"
                },
                {
                  "key": "specialization",
                  "value": "Cardiologist"
                }
              ]
            }
          },
          "response": []
