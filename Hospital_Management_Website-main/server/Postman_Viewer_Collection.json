              "raw": "{{baseUrl}}/api/doctors/by-department?token={{viewerToken}}&department=General",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "by-department"],
              "query": [
                {
                  "key": "token",
                  "value": "{{viewerToken}}"
                },
                {
                  "key": "department",
                  "value": "General"
                }
              ]
            }
          },
          "response": []
