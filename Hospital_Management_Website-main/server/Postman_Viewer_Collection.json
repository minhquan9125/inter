        {
          "name": "✅ Export Doctors JSON (Public - No token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "pm.test('Returns array of doctors', () => {",
                  "    pm.expect(pm.response.json()).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/doctors/export",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "export"]
            }
          },
          "response": []
        }
      ]
    },
